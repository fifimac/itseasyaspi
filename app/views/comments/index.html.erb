<h1>Listing comments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.title %></td>
    <td><%= comment.text %></td>
    <td><%= link_to 'Show', comment, class: "button secondary" %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) , class: "button secondary "%></td>
    <td><%= link_to 'Destroy', comment, class: "button alert", method: :delete, data: { confirm: 'Are you sure?' } %></td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_comment_path, class: "button radius" %>

