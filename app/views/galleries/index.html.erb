<h1>Listing galleries</h1>

<table>
  <tr>
    <th>Image</th>
    <th><%= link_to "Submitted by", :sort => "submitted_by"%></th>
    <th><%= link_to "Step", :sort => "step"%></th>
     <% if current_user.admin? %>
      <th></th>
      <th></th>
      <th></th>
     <% end %>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td>
      <%= image_tag gallery.image_url(:thumb_med).to_s %>
    </td>
    <td>
       <%= gallery.submitted_by %>
   

    </td>
    <td><%= gallery.step %></td>

    <% if current_user.admin? %>
      <td><%= link_to 'Show', gallery %></td>
      <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
      <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Gallery', new_gallery_path %>
 <% end %>