<h1>Images:</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Description:</th>
    <th>Submitted by</th>
    <th>Step</th>
     <% if current_user && current_user.admin? %>
      <th></th>
      <th></th>
      <th></th>
     <% end %>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= image_tag gallery.image_url(:thumb_med).to_s %></td>
    <td><%= gallery.image_comment %></td>
    <td><%= gallery.submitted_by %></td>
    <td><%= gallery.step %></td>

    <% if current_user && current_user.admin? %>
      <td><%= link_to 'Show', gallery %></td>
      <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
      <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

  </tr>

<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'Add Image of your Progress', new_gallery_path, :class => "button"%>
 <% end %>