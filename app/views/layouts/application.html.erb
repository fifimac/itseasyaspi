<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />
  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Easyaspi - <%= yield_or_default(:title, "Sewing made easy") %></title>
    <%= stylesheet_link_tag "main", "docs" %>
    <%= stylesheet_link_tag "main", "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
  	<%= javascript_include_tag "application" %>
  	<%= javascript_include_tag :defaults %>
    <%= csrf_meta_tags %>
	 <script src="http://foundation.zurb.com/docs/assets/js/jquery.js"></script>
	 <script src="http://foundation.zurb.com/docs/assets/js/all.js"></script>
  </head>
  <body>
    <!-- start nav -->
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "Its Easy as Pi", root_path %></a></h1>
        </li>
         <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>
      <section class="top-bar-section">
        <ul class="left">
          <li><%= link_to "Instructions", instructions_path%></li>
          <li class="divider"></li>
          <li><%= link_to "Pattern Maker", pattern_maker_path %></li>
          <li class="divider"></li>
        </ul>

        <ul class="right">
          <li class="divider"></li>
          <!-- Sign in functionality -->
          <% if user_signed_in? %>
            <li id="non-link">Hi, <%= current_user.email%></li>
            <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
             <li class="divider"></li>
              <li class="divider"></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to 'Register', new_user_registration_path %> </li>

            <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% end %>
           <li class="divider"></li>
        </ul>
      </section>
    </nav>
    <!-- end nav -->

    <!-- main content -->
      <div class="row">
        <div class="small-10 small-centered columns">
        	<!-- message -->
          	<div class="small-8 small-centered columns">
		      	 <p id="notice" class="msg notice"><%= notice %></p> 
      			<p id="alert" class="msg error"><%= alert %></p>
      			</div>
		    <%= yield %>
        </div>
    </div>
        <!-- end main content -->


     <!-- Footer -->
    <footer class="row">
      <div class="large-12 columns">
        <hr>
        <div class="row">
          <div class="large-6 columns">
            <p>&copy; Its Easy as Pi 2013</p>
          </div>
          <div class="large-6 columns">
            <ul class="inline-list right">
              <li></li>
              <li></li>
              <li>Profile</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

<script>
$("#notice:empty").hide();

$("#alert:empty").hide();

//$("#progress").css("width", "10%");

</script>
	<script>
	  $(document).foundation();
	  </script>
	<script>
	  	$(document).foundation('joyride', 'start');
	</script>
  </body>
</html>
